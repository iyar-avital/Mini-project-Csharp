<Window x:Class="PLWPF.Calander"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Background="White"
        BorderBrush="Transparent"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        WindowStyle="None"
        Title="Calander" Height="320" Width="250">
    <Grid Background="Transparent">
        <Viewbox Name="CalanderBox" HorizontalAlignment="Left" Height="264" Margin="13,3,-3,0" VerticalAlignment="Top" Width="240"/>
        <Button Name="Close" Content="close" HorizontalAlignment="Left" Margin="80,278,0,0" VerticalAlignment="Top" Width="75" Height="25" Click="Close_Click"/>
    </Grid>
</Window>
